<div class="bg-white">
  <div class="mx-auto max-w-7xl py-16 px-6 sm:py-24 lg:px-8">
    <div class="text-center mb-10">
      <h2 class="text-lg font-semibold text-indigo-600">Welcome to the</h2>
      <p class="mt-1 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">Members area</p>
    </div>

    <ul role="list" class="max-w-sm mx-auto divide-y divide-gray-200">
      <% User.all.each do |user| %>
        <li class="flex py-4">
          <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1491528323818-fdd1faba62cc?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-900"><%= user.display_name %></p>
            <p class="text-sm text-gray-500"><%= user.email %></p>
          </div>
        </li>
      <% end %>
    </ul>

    <div class="mt-8 flex flex-col items-center">
      <%= button_to "Log out", session_path(current_user), method: :delete, class: button_classes.render(style: :secondary) %>
    </div>

  </div>
</div>
